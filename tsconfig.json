{
	"compilerOptions": {
		"strictNullChecks": true,
		"moduleResolution": "node",
		"module": "commonjs",
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"noEmitOnError": false,
		"noImplicitAny": false,
		"target": "es2017",
		"removeComments": true,
		"jsx": "react",
		"sourceMap": false,

		"baseUrl": "src",
		"paths": {
			"@/*": [
				"./*"
			],
		},
		"watch": true,
		"rootDir": "./src",
		"outDir":"./build",
	},
	"exclude": [
		"node_modules",
	],
	"include": [
		"./src/**/*"
	]
}